<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.markany.gameboss.game.pojo.GameVersion">
	<resultMap type="GameVersion" id="baseGameVersion" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="gameId" property="gameId"/>
		<result column="code" property="code"/>
		<result column="version" property="version"/>
		<result column="createTime" property="createTime"/>
		<result column="summary" property="summary"/>
	</resultMap>
	
	<resultMap type="GameVersion" id="gameVersion" extends="com.markany.gameboss.game.pojo.GameVersion.baseGameVersion">
		<association property="game" column="gameId" select="com.markany.gameboss.game.pojo.Game.findById"/>
	</resultMap>
	
	<resultMap type="GameVersion" id="gameVersionDetail" extends="com.markany.gameboss.game.pojo.GameVersion.gameVersion">
		<association property="game" column="id" foreignColumn="gameId" resultMap="com.markany.gameboss.game.pojo.Game.game"  columnPrefix="game_"/>
	</resultMap>

	<sql id="tableName">
		t_game_version
	</sql>
	<sql id="tableAlias">
		GameVersion
	</sql>
	<sql id="joinTable">
		<if test="hasJoin and joinTableAlias.contains('Game')">
     		join <include refid="com.markany.gameboss.game.pojo.Game.tableName"/> Game on Game.id = <include refid="tableAlias" />.gameId
     	</if>
	</sql>

	<select id="find" resultMap="gameVersion">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="findById" resultMap="gameVersion">
		select * from 
		<include refid="tableName"/>
		where id = #{id}
	</select>
	
	<select id="findByCode" resultMap="gameVersion">
		select * from 
		<include refid="tableName"/>
		where code = #{code}
	</select>
	
	<select id="list" resultMap="gameVersion">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<include refid="joinTable" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>
	<!-- 根据游戏名中文排序获取列表 -->
	<select id="listDetailOrderByCNGameName" resultMap="gameVersionDetail">
		select 
		  Game.name game_name,
		  Game.id game_id,
		  GameVersion.id,
		  GameVersion.version,
		  GameVersion.code
		from
		  t_game Game,
		  t_game_version GameVersion 
		where Game.id = GameVersion.gameId 
		  order by convert(Game.name USING gbk) COLLATE gbk_chinese_ci asc,
		  GameVersion.version asc
	</select>

	<select id="count" resultType="java.lang.Integer">
     	select count(*) from
     	<include refid="tableName" /> <include refid="tableAlias" />
		<include refid="joinTable"/>
     	<trim prefix="where">
    		<include refid="common.aliasPropertiesCondition"/>
    	</trim>
     </select>

	<insert id="add" parameterType="GameVersion" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,code
			,createTime
			,gameId
			,summary
			,version
		)
		values
		(
			 #{id}
			,#{code}
			,#{createTime}
			,#{game.id}
			,#{summary}
			,#{version}
		)
	</insert>
	
	<update id="update" parameterType="GameVersion">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="code != null">code=#{code},</if>
			<if test="createTime != null">createTime=#{createTime},</if>
			<if test="game!= null and game.id != null">gameId=#{game.id},</if>
			<if test="summary != null">summary=#{summary},</if>
			<if test="version != null">version=#{version},</if>
		</trim>
		where id=#{id}
	</update>
</mapper>