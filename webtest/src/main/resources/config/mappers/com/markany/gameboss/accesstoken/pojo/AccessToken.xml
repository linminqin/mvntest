<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.markany.gameboss.accesstoken.pojo.AccessToken">
	<resultMap type="AccessToken" id="accessToken" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="playerCode" property="playerCode"/>
		<result column="token" property="token"/>
		<result column="createTime" property="createTime"/>
		<result column="ip" property="ip"/>
		<result column="state" property="state"/>
	</resultMap>

	<sql id="tableName">
		t_accesstoken
	</sql>
	<sql id="tableAlias">
		AccessToken
	</sql>

	<select id="find" resultMap="accessToken">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="findById" resultMap="accessToken">
		select * from 
		<include refid="tableName"/>
		where id = #{id}
	</select>
	
	<select id="list" resultMap="accessToken">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="AccessToken" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,createTime
			,ip
			,playerCode
			,state
			,token
		)
		values
		(
			 #{id}
			,#{createTime}
			,#{ip}
			,#{playerCode}
			,#{state}
			,#{token}
		)
	</insert>
	
	<update id="update" parameterType="AccessToken">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="createTime != null">createTime=#{createTime},</if>
			<if test="ip != null">ip=#{ip},</if>
			<if test="playerCode != null">playerCode=#{playerCode},</if>
			<if test="state != null">state=#{state},</if>
			<if test="token != null">token=#{token},</if>
		</trim>
		where id=#{id}
	</update>
	
	<!-- 禁用token -->
	<delete id="disableToken">
		update <include refid="tableName" /> 
		set state = 1 where playerCode = #{playerCode} and token = #{token} and state = 0
	</delete>
</mapper>