<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.markany.gameboss.player.pojo.PlayerOnlineList">
	<resultMap type="PlayerOnlineList" id="playerOnlineList" extends="com.markany.gameboss.player.pojo.BasePlayerPojo.basePlayerPojo">
		<result column="gameCode" property="gameCode"/>
		<result column="channelCode" property="channelCode"/>
		<result column="loginTime" property="loginTime"/>
		<result column="logoutTime" property="logoutTime"/>
		<result column="region" property="region"/>
	</resultMap>

	<sql id="tableName">
		t_player_online_list
	</sql>
	<sql id="tableAlias">
		PlayerOnlineList
	</sql>

	<select id="find" resultMap="playerOnlineList">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="findById" resultMap="playerOnlineList">
		select * from 
		<include refid="tableName"/>
		where id = #{id}
	</select>
	
	<select id="list" resultMap="playerOnlineList">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="PlayerOnlineList" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,gameCode
			,loginTime
			,logoutTime
			,playerCode
			,channelCode
			,region
		)
		values
		(
			 #{id}
			,#{gameCode}
			,#{loginTime}
			,#{logoutTime}
			,#{playerCode}
			,#{channelCode}
			,#{region}
		)
	</insert>
	
	<update id="update" parameterType="PlayerOnlineList">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="gameCode != null">gameCode=#{gameCode},</if>
			<if test="loginTime != null">loginTime=#{loginTime},</if>
			<if test="logoutTime != null">logoutTime=#{logoutTime},</if>
			<if test="playerCode != null">playerCode=#{playerCode},</if>
			<if test="channelCode != null">channelCode=#{channelCode},</if>
			<if test="region != null">region=#{region},</if>
		</trim>
		where id=#{id}
	</update>
	<!-- 修改过期数据 -->
	<update id="updateOverduetimeData">
		update <include refid="tableName" /> 
		set logoutTime = now() 
		where date_add(loginTime, interval ${overduetime} hour) <![CDATA[<]]> now() 
		and logoutTime is null
	</update>
</mapper>