<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.markany.gameboss.channel.pojo.Channel">
	<resultMap type="Channel" id="channel" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="name" property="name"/>
		<result column="code" property="code"/>
		<result column="createTime" property="createTime"/>
		<result column="summary" property="summary"/>
	</resultMap>

	<sql id="tableName">
		t_channel
	</sql>
	<sql id="tableAlias">
		Channel
	</sql>

	<select id="find" resultMap="channel">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="findById" resultMap="channel">
		select * from 
		<include refid="tableName"/>
		where id = #{id}
	</select>
	
	<select id="findByCode" resultMap="channel">
		select * from 
		<include refid="tableName"/>
		where code = #{code}
	</select>
	
	<select id="list" resultMap="channel">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>
	
	<!-- 根据中文名称排序 -->
	<select id="listOrderByCNName" resultMap="channel">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		order by
			convert(<include refid="tableAlias" />.name USING gbk) COLLATE gbk_chinese_ci asc
		<trim prefix=",">
			<include refid="common.simpleSortCondition" />
		</trim>
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="Channel" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,code
			,createTime
			,name
			,summary
		)
		values
		(
			 #{id}
			,#{code}
			,#{createTime}
			,#{name}
			,#{summary}
		)
	</insert>
	
	<update id="update" parameterType="Channel">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="code != null">code=#{code},</if>
			<if test="createTime != null">createTime=#{createTime},</if>
			<if test="name != null">name=#{name},</if>
			<if test="summary != null">summary=#{summary},</if>
		</trim>
		where id=#{id}
	</update>
</mapper>