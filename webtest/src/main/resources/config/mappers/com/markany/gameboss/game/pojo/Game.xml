<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.markany.gameboss.game.pojo.Game">
	<resultMap type="Game" id="game" extends="com.lmiky.jdp.database.pojo.BasePojo.basePojo">
		<result column="name" property="name"/>
		<result column="summary" property="summary"/>
		<result column="createTime" property="createTime"/>
	</resultMap>

	<sql id="tableName">
		t_game
	</sql>
	<sql id="tableAlias">
		Game
	</sql>

	<select id="find" resultMap="game">
		select * from 
		<include refid="tableName"/> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition"/>
		</trim>
	</select>
	
	<select id="findById" resultMap="game">
		select * from 
		<include refid="tableName"/>
		where id = #{id}
	</select>
	
	<select id="list" resultMap="game">
		select * from
		<include refid="tableName" /> <include refid="tableAlias" />
		<trim prefix="where">
			<include refid="common.aliasPropertiesCondition" />
		</trim>
		<include refid="common.sortCondition" />
		<include refid="common.pageCondition" />
	</select>

	<insert id="add" parameterType="Game" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into
		<include refid="tableName" />
		(
			 id
			,createTime
			,name
			,summary
		)
		values
		(
			 #{id}
			,#{createTime}
			,#{name}
			,#{summary}
		)
	</insert>
	
	<update id="update" parameterType="Game">
		update <include refid="tableName" /> 
		<trim prefix="set" suffixOverrides=",">
			<if test="createTime != null">createTime=#{createTime},</if>
			<if test="name != null">name=#{name},</if>
			<if test="summary != null">summary=#{summary},</if>
		</trim>
		where id=#{id}
	</update>
</mapper>